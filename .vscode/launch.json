{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ (macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for LLDB",
                    "text": "settings set target.print-summary-depth 10",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
